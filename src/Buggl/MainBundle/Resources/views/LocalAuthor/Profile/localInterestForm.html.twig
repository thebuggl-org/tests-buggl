<li id="{{ 'newInterest_'~id }}">
	<form id="{{ 'interestPhotoForm_'~id }}" action="{{ path('upload_local_interest_photo') }}" method="POST" enctype="multipart/form-data" class="pht">
		<div class="form-section editor">
			<h4>Photo</h4>
			<div class="file" >
				<input type="text" value="Browse Photo"/>
				{% set className = 'interestPhotoUpload_'~id %}
				{{ form_widget(photoForm.file,{ 'attr':{'class':'origin '~className }}) }}
				{{ form_errors(localInterestForm.imageFilename) }}
				{{ form_rest( photoForm ) }}
				{% if photoPath is not null %}
					<img src="{{ asset(photoPath) }}" width="120" id="{{ 'newInterestPhoto_'~id }}">
				{% else %}
					<img src="{{ asset('bundles/bugglmain/images/custom/cover-guide.jpg') }}" width="120" id="{{ 'newInterestPhoto_'~id }}">
				{% endif %}
			</div>
		</div>
	</form>
	<form id="{{ 'interestForm_'~id }}" action="{{ action }}" method="POST" novalidate>
		<div class="form-section editor">
			<span>
				<h4>Title</h4>
				{{ form_widget(localInterestForm.title,{'attr':{'placeholder':'Boston Marathon', 'size':'55'}}) }}
				{{ form_errors(localInterestForm.title) }}
			</span>
		</div>
		<div class="form-section editor">
			<span>
				<h4>Content</h4>
				{{ form_widget(localInterestForm.content,{'attr':{'placeholder':'It was one of the most challenging experiences I have ever completed in my life! It helped me understand commitment, dedication, and overall understanding of endurance athletes'}}) }}
				{{ form_errors(localInterestForm.content) }}
			</span>
		</div>
		<div class="form-section" style="display:none">
			<span>
				{{ form_widget(localInterestForm.imageFilename) }}
			</span>
		</div>
		{{ form_rest( localInterestForm ) }}
	
		<div class="form-section submit-section">
			<input id="addLocalInterestButton" class="button" type="submit" value="Submit" />
			<a class="cancelAddLocalInterestButton button" href="" onclick="return false">Cancel</a>
		</div>
	</form>
</li>