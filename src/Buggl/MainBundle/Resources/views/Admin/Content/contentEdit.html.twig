{% extends "BugglMainBundle:Markup/Markup:adminContentLayout.html.twig" %}

{% block title %}Static Pages{% endblock %}

{% block breadCrumbs %}
	<span> &rsaquo; Edit </span>
{% endblock %}

{% block inner_content %}
<form class="site-admin-content-form clearfix" id="contentForm" action="{{ actionUrl }}" method="POST" novalidate>
	<div class="form-section">	
		<span>
			<label>Title</label>
			{{ form_widget(form.title) }}
			{{ form_errors(form.title) }}
		</span>
	</div>
	<div class="form-section">	
		<span>
			<label>Url</label>
			{{ form_widget(form.url) }}
			{{ form_errors(form.url) }}
		</span>
	</div>
	<div class="form-section">
		<span>
			<label>Content</label>
			{{ form_widget(form.content ) }}
			{{ form_errors(form.content ) }}
		</span>
</div>
<div class="submit-section form-section">
<span>
	{{ form_rest(form) }}
	<br/>
	<input class="button" type="submit" value="Submit">
	
	<a href="{{ path('admin_content') }}">
		<input class="button" type="button" value="Cancel">
	</a>
	</span>	
</div>
</form>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
		
    {% javascripts 
        '@BugglMainBundle/Resources/public/js/tiny_mce/jquery.tinymce.js'
    %}
        <script src="{{ asset_url }}"></script>
			 <script type="text/javascript">
			        $(document).ready(function(){
						applyTinyMCE = function(element){
				 			element.tinymce({
				 				script_url : '/bundles/bugglmain/js/tiny_mce/tiny_mce.js',
				 				width: '100%',
				 				height: '100%',
				 				theme : "advanced",
								plugins : "",
								// Theme options
								theme_advanced_buttons1 : "bold,italic,underline,|,justifyleft,justifycenter,justifyright,justifyfull,|,image,|,code",
								theme_advanced_buttons2 : "",
								theme_advanced_buttons3 : "",
								theme_advanced_buttons4 : "",
								theme_advanced_toolbar_location : "top",
								theme_advanced_toolbar_align : "left",
								theme_advanced_statusbar_location : "bottom",
								theme_advanced_resizing : true
				 			});
						}
						
						applyTinyMCE($('#StaticContent_content'));
					
			        });
			    </script>
	   
    {% endjavascripts %}
    
{% endblock %}