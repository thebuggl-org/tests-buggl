	<li>
		<a class="almost-done-button" href="{{ path('finishing_travel_guide', {'travel_guide_id' : travel_guide_id})}}">
			<img src="/bundles/bugglmain/images/thumbs-up.png" class="thumbs-up" />
			PRICE & PUBLISH
		</a>
	</li>
</ul>
{% endblock %}