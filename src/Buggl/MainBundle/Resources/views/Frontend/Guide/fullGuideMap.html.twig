<section class="it_map">
	<div class="nav_day">
		<h2>Day <span id="dayCount">1</span></h2>
		<ul current-page="1">
			<li><a href="javascript:void(0)" class="navigation" id="prev" ><span class="ico"></span></a></li>
			<li><a href="javascript:void(0)" class="navigation" id="next"><span class="ico"></span></a></li>
		</ul>	
	</div>
	<div id="map_canvas" style="width:100%; height:499px" center-lat="{{ '11.25' }}" center-long="{{ '125.00' }}" api-key="{{ googleMapsApiKey }}">

	</div>
</section>
	
<div style="display:none;" id="infoWindowContent">
	{% for day,spotsForDay in spots  %}
		<ul id="{{ 'day_' ~ day }}">
			{% for order,spot in spotsForDay %}
				<li order="{{ order }}" latitude="{{ spot.spot.latitude }}" longitude="{{ spot.spot.longitude }}" id="{{ order }}">
					{# mark up here Mikes #}
					<div class="map_spot">
						<div>
							<p>Day {{ spot.dayNum }}</p>
							<a href="#" class="type1" alt="Morning" title="Morning"><span class="ico"></span></a>
						</div>
						<div>	
							<h3>{{ spot.spot.name }}</h3>
							<img src="{{ asset('bundles/bugglmain/images/custom/running_144px.jpg') }}" border="0" align="right">
							<p>{{ 'Test Description' | raw }}</p>
							<a href="javascript:void(0)" onclick="nextSpot({{ order }})" class="nextSpot">Go to Next Spot</a>	
						</div>		
					</div>	
				</li>	
			{% endfor %}	
		</ul>	
	{% endfor %}
</div>

<script type="text/javascript" src="{{ asset('bundles/bugglmain/js/Frontend/full-guide-map.js' | s3Cdn) }}"></script>